# ZeroHR Environment File
# Copy this to .env and fill in your values

# Regolo AI API Key (REQUIRED - get from https://regolo.ai)
REGOLO_API_KEY=your_api_key_here

# Optional - API endpoint
REGOLO_API_URL=https://api.regolo.ai/v1/completions

# Optional - AI Model
CV_CREATOR_MODEL=gpt-oss-120b

# Optional - Database (defaults to SQLite)
DATABASE_URL=sqlite:///./assunzioni.db
KEY_FLOW_DATABASE_URL=sqlite:///./key_flow.db

# Optional - Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Optional - Development settings
ZEROHR_DEV_PURGE=0